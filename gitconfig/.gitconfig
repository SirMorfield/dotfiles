[includeIf "gitdir:~/server1/"]
	path = ~/git/dotfiles/gitconfig/.gitconfig-joppe


[includeIf "gitdir:~/q/"]
	path = ~/git/dotfiles/gitconfig/.gitconfig-q42

[includeIf "gitdir:~/git/"]
	path = ~/git/dotfiles/gitconfig/.gitconfig-joppe

[user]
	name = Joppe Koers

	# https://stackoverflow.com/questions/48065535/should-i-keep-gitconfigs-signingkey-private
	signingkey = 0C0377D01C665928

# set gpg path for darwin
[includeIf "gitdir:/Users/"]
	path = ~/git/dotfiles/gitconfig/.gitconfig-darwin

# set gpg path for darwin
[includeIf "gitdir:/home/"]
	path = ~/git/dotfiles/gitconfig/.gitconfig-linux

[commit]
	gpgsign = true

[submodule]
	# recurse = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[push]
	autoSetRemote = true
	autoSetupRemote = true

[pull]
	rebase = false
